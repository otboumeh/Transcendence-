{
    "name": "transcendence/backend",
    "description": "Backend for Transcendence project",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "robthree/twofactorauth": "^2.0",
        "firebase/php-jwt": "^6.11",
        "vlucas/phpdotenv": "^5.5",
        "ramsey/uuid": "^4.7",
        "monolog/monolog": "^3.4",
        "google/apiclient": "^2.17"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}